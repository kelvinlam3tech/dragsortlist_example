    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" xmlns:app="http://schemas.android.com/apk/res/com.example.dragsortlistview">

    <com.mobeta.android.dslv.DragSortListView
        android:id="@+id/dragSortListView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
